<h1>Welcome to Task Manager</h1>
<h2>task list index</h2>

<% if current_user %>
  <%= link_to "New TaskList", new_task_list_path  %>
  <br>
  <br>
  <table>
    <th>
      <td>Title</td>
      <td>Description</td>
    </th>
    <%- @task_lists.each do |list| %>
      <tr>
        <td><%= link_to "view", task_list_path(list.id) %></td>
        <td><%= link_to list.title, task_list_path(list.id) %></td>
        <td><%= list.description %></td>
        <td><%= link_to "Edit", edit_task_list_path(list.id) %></td>
        <td><%= link_to "Delete", task_list_path(list.id), method: :delete %></td>
      </tr>
    <% end %>
  </table>

  <br>
  <br>

  <%= link_to "Logout", logout_path, method: :delete %>
<% else %>
  <%= link_to "Sign Up", new_user_path  %>
  <%= link_to "Login", new_session_path  %>
  <br>
<% end %>
